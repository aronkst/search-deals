<h1>Scrapers</h1>

<ul class="pt-3 list-group">
  <% @scrapers.each do |scraper| %>
    <% next unless scraper.configured? %>
    <li class="list-group-item">
      <%= scraper.name %>
      <div class="float-end">
        <%= button_to "Start", sale_groups_create_path(scraper.id), class: "btn btn-primary btn-sm", method: :post %>
      </div>
    </li>
  <% end %>
</ul>

<h1 class="mt-3">Sales Groups</h1>

<ul class="pt-3 list-group">
  <% @sales_groups.each do |sale_group| %>
    <li class="list-group-item">
      <%= sale_group.id %> - <%= sale_group.scraper_name %> - <%= sale_group.created_at %>
      <div class="float-end">
        <div class="container">
          <div class="row">
            <div class="col p-0 mx-2">
              <%= link_to "Show", sale_groups_show_path(sale_group.scraper.id, sale_group.id), class: "btn btn-primary btn-sm" %>
            </div>
            <div class="col p-0">
              <%= button_to "Delete", sale_groups_destroy_path(sale_group.scraper.id, sale_group.id), class: "btn btn-danger btn-sm", method: :delete %>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>